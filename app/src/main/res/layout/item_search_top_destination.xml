<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="150dp"
    android:layout_height="120dp"
    android:layout_marginEnd="20dp"
    android:layout_marginBottom="15dp">


    <View
        android:id="@+id/view"
        android:layout_width="wrap_content"
        android:translationZ="10dp"
        android:background="@drawable/layout_search_fade"
        android:clipToOutline="true"
        android:layout_height="wrap_content" />

    <ImageView
        android:id="@+id/imgCity"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/img_search_background"
        android:clipToOutline="true"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/flame_towers" />

    <TextView
        android:id="@+id/txtCity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:translationZ="11dp"
        android:lines="2"
        android:layout_marginBottom="7dp"
        android:layout_marginStart="10dp"
        android:textSize="18sp"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:text="Sheki Azerbaijan" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/index"
        android:layout_width="24dp"
        android:clickable="false"
        android:visibility="gone"
        android:layout_gravity="end"
        android:background="@drawable/icon_button"
        android:layout_height="24dp"
        android:layout_margin="15dp"
        android:translationZ="12dp"
        android:textSize="10sp"
        android:padding="0dp"
        android:textColor="@color/pink_star"
        android:text="1" />

</FrameLayout>