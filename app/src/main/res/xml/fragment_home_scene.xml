<?xml version="1.0" encoding="utf-8"?>
<MotionScene 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto">

    <Transition
        motion:constraintSetEnd="@+id/end"
        motion:constraintSetStart="@id/start"
        motion:duration="1000">
       <KeyFrameSet>
       </KeyFrameSet>
        <OnSwipe />
        <OnSwipe />
    </Transition>

    <ConstraintSet android:id="@+id/start">

        <Constraint
            android:id="@+id/cardView"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="0dp"
            android:layout_height="280dp"
            motion:layout_constraintTop_toBottomOf="@+id/imgHeader"
            android:translationY="-220dp"
            motion:layout_constraintStart_toStartOf="parent" />
    </ConstraintSet>

    <ConstraintSet android:id="@+id/end">
        <Constraint
            android:id="@+id/imgHeader"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="0dp"
            android:layout_height="100dp"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            android:visibility="gone"
            android:alpha="0.4" />
        <Constraint
            android:id="@+id/imageButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintStart_toStartOf="@+id/leftGuideline"
            android:layout_marginTop="16dp"
            android:visibility="gone" />

        <Constraint
            android:id="@+id/cardView"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="0dp"
            android:layout_height="120dp"
            android:translationY="0dp"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toTopOf="parent" />
        <Constraint
            android:id="@+id/leftGuideline"
            motion:layout_constraintGuide_percent="0.04"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <Constraint
            android:id="@+id/rightGuideline"
            motion:layout_constraintGuide_percent="0.96"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <Constraint
            android:id="@+id/scrollView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:translationY="0dp"
            android:layout_marginTop="40dp"
            motion:layout_constraintEnd_toStartOf="@id/rightGuideline"
            motion:layout_constraintStart_toStartOf="@id/leftGuideline"
            motion:layout_constraintTop_toBottomOf="@+id/cardView"
           />
    </ConstraintSet>
</MotionScene>